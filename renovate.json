{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended",
      "schedule:weekly" 
    ],
    "packageRules": [
      {
          "matchUpdateTypes": [
              "minor",
              "patch"
          ],
          "matchCurrentVersion": "!/^0/",
          "automerge": true,
          "autoApprove": true
      }
    ]
  }
  
  